<h1>Edit your post</h1>

<div>
  <%= form_for [ @user, @post ] do |f| %>
    <% if @post.errors.any? %>
      <div>
        <h5>
          Hold up,
          <%= pluralize(@post.errors.count,"error") %>
          here
        </h5>
        <ol>
          <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
        </ol>
      </div>
    <% end %>

    <p>
      <%= f.text_field :image_url, placeholder: "Image URL" %>
    </p>
    <p>
      <%= f.text_area :caption, placeholder: "Caption" %>
    </p>
    <p>
      <%= f.text_field :rating, placeholder: "Rating" %>
    </p>
    <p>
      <%= f.text_field :restaurant, placeholder: "Restaurant" %>
    </p>
    <p>
      <%= f.text_field :location, placeholder: "City" %>
    </p>
    <p>
      <%= f.submit "Save" %>
    </p>
  <% end %>
</div>
<p class="back">
  <%= link_to "<< Nevermind", user_post_path, {:class => "cancel"} %>
</p>
