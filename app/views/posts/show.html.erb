<div class="post">
  <img class="burger_pic" src="<%= @post.image_url %>" >
  <p><%= link_to "@#{@user.username}", user_path(@user) %></p>
  <p><%= @post.caption %></p>
</div>
<p>
  <%= link_to "Back to all posts", "/", {:class => "back"} %>
  <% if @user == current_user %>
    <a class="change">
    <%= link_to "Edit", edit_user_post_path , {:class => "change"} %> |

      <%= link_to "Delete", user_post_path,
          method: :delete,
          data: { confirm: "Are you sure you want to delete this post?" } %>
    </a>
  <% end %>
</p>
